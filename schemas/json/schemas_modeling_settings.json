{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "modeling_settings",
  "type": "object",
  "required": [
    "schema_version",
    "session_slug",
    "ts_local",
    "ts_utc",
    "response",
    "feature_list",
    "models_enabled",
    "cv_type",
    "folds",
    "metrics",
    "seed",
    "data_fingerprint"
  ],
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },
    "session_slug": { "type": "string" },
    "ts_local": { "type": "string", "format": "date-time" },
    "ts_utc": { "type": "string", "format": "date-time" },

    "response": { "type": "string", "minLength": 1 },
    "feature_list": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },

    "models_enabled": {
      "type": "array",
      "items": { "type": "string", "enum": ["RF","XGB","GPR"] },
      "minItems": 1
    },
    "cv_type": { "type": "string", "enum": ["KFold","GroupKFold","StratifiedKFold"] },
    "folds": { "type": "integer", "minimum": 2, "maximum": 10 },

    "metrics": {
      "type": "array",
      "items": { "type": "string", "enum": ["r2","rmse","mae"] },
      "minItems": 1
    },

    "scaling_flags": {
      "type": "object",
      "properties": {
        "standardize_X": { "type": "boolean" },
        "standardize_y": { "type": "boolean" }
      },
      "additionalProperties": false
    },

    "seed": { "type": "integer" },
    "timing_ms": { "type": "number" },

    "data_fingerprint": { "type": "string", "minLength": 8 }
  },
  "additionalProperties": false
}
